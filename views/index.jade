extend layout
block content
    - var myDate = new Date();
    - var hrs = myDate.getHours();
    - var greet;
    if (hrs < 12)
        - greet = 'Good Morning';
    else if (hrs >= 12 && hrs <= 17)
        - greet = 'Good Afternoon';
    else if (hrs >= 17 && hrs <= 24)
        - greet = 'Good Evening';
    h1 Hey #{greet} #{name}....
    div 
        a(href="/gallery") Click here...